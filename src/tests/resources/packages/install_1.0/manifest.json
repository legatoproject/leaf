{
    "info": {
        "name": "install",
        "version": "1.0",
        "description": "this is a description",
        "documentation": "https://docs.python.org/3/library/",
        "date": "2018-09-24 12:05:22"
    },
    "install": [
        {
            "command": [
                "chmod",
                "-R",
                "-w",
                "folder"
            ]
        },
        {
            "command": [
                "touch",
                "postinstall.log"
            ]
        },
        {
            "command": [
                "sh",
                "-c",
                "echo @{DIR} > ${LEAF_TARGET_FILE}"
            ],
            "env": {
                "LEAF_TARGET_FILE": "targetFileFromEnv"
            }
        },
        {
            "command": [
                "env"
            ],
            "env": {
                "LEAF_FOO": "BAR"
            }
        },
        {
            "command": [
                "mkdir",
                "folder2"
            ]
        },
        {
            "command": [
                "sh",
                "-c",
                "env > dump.env"
            ]
        }
    ],
    "uninstall": [
        {
            "command": [
                "touch",
                "@{DIR}/../uninstall.log"
            ]
        }
    ]
}